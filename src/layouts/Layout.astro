---
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
---

<script is:inline>
	(function () {
		console.log("ðŸŽ¬ Script executing");

		function applyTheme() {
			console.log("ðŸŽ¨ applyTheme called");

			const theme = localStorage.getItem("theme");
			console.log("ðŸ“¦ localStorage theme:", theme);

			const prefersDark = window.matchMedia(
				"(prefers-color-scheme: dark)",
			).matches;
			console.log("ðŸŒ™ prefers-color-scheme dark:", prefersDark);

			const isDark =
				theme === "dark" ||
				(theme === "system" && prefersDark) ||
				(!theme && prefersDark);

			console.log("âœ… Applying dark mode:", isDark);
			console.log(
				"ðŸ“‹ Current classList before:",
				document.documentElement.classList.toString(),
			);

			document.documentElement.classList[isDark ? "add" : "remove"](
				"dark",
			);

			console.log(
				"ðŸ“‹ Current classList after:",
				document.documentElement.classList.toString(),
			);
		}

		// Apply immediately
		applyTheme();

		// Re-apply after navigation
		document.addEventListener("astro:after-swap", () => {
			console.log("ðŸ”„ astro:after-swap fired");
			applyTheme();
		});

		document.addEventListener("astro:page-load", () => {
			console.log("ðŸ“„ astro:page-load fired");
			console.log(
				"Final classList:",
				document.documentElement.classList.toString(),
			);
		});
	})();
</script>

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title}</title>
		<ClientRouter />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Epilogue:wght@400;500;700&family=Manrope:wght@400;500;700&display=swap"
			rel="stylesheet"
		/>
	</head>

	<body class="flex flex-col min-h-screen pt-24">
		<Navbar />
		<main class="flex-1">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
