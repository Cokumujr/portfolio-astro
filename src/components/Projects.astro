---
import { getCollection } from "astro:content";
import Container from "./Container.astro";
import {
    Card,
    CardContent,
    CardDescription,
    CardFooter,
    CardHeader,
    CardTitle,
} from "@/components/ui/card";
import { Button } from "./ui/button";
import { Separator } from "@/components/ui/separator";
import { FaGithub } from "react-icons/fa";
import { ExternalLink } from "lucide-react";
import SkillsCarousel from "./ui/SkillsCarousel";
import { slide } from "astro:transitions";
import { fade } from "astro:transitions";

const projects = await getCollection("projects");
const heading = "My Projects";
---

<Container>
    <div class="space-y-6" transition:animate={slide({ duration: "1.5s" })}>
        <div class="text-center mb-12">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">
                {heading}
            </h1>
        </div>
        <Separator />
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Project cards -->
            {
                projects.map((project) => (
                    <Card className="flex flex-col h-full">
                        <CardHeader>
                            <img
                                src={project.data.image}
                                alt={project.data.title}
                                class="w-full h-48 object-cover rounded-lg mb-4"
                            />
                            <CardTitle class="text-2xl">
                                {project.data.title}
                            </CardTitle>
                            <CardDescription>
                                {project.data.description}
                            </CardDescription>
                        </CardHeader>

                        <CardContent className="flex-grow">
                            <div class="flex flex-wrap gap-2 mb-4">
                                {project.data.tech.map((tech) => (
                                    <span class="px-3 py-1 bg-primary/10 text-primary rounded-full text-sm">
                                        {tech}
                                    </span>
                                ))}
                            </div>
                            <ul class="space-y-2 text-sm text-muted-foreground">
                                {project.data.highlights.map((highlight) => (
                                    <li class="flex items-start gap-2">
                                        <span class="text-primary mt-1">â€¢</span>
                                        {highlight}
                                    </li>
                                ))}
                            </ul>
                        </CardContent>

                        <CardFooter className="flex-col sm:flex-row gap-3 mt-auto">
                            <Button
                                variant="default"
                                className="w-full sm:flex-1"
                            >
                                <a
                                    href={project.data.githubURL}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="flex items-center justify-center gap-2 w-full"
                                >
                                    <FaGithub />
                                    GitHub
                                </a>
                            </Button>

                            {project.data.liveSiteURL && (
                                <Button
                                    variant="outline"
                                    className="w-full sm:flex-1"
                                >
                                    <a
                                        href={project.data.liveSiteURL}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="flex items-center justify-center gap-2 w-full"
                                    >
                                        <ExternalLink />
                                        Live Site
                                    </a>
                                </Button>
                            )}
                        </CardFooter>
                    </Card>
                ))
            }

            <!-- Skills Carousel - spans 2 columns on md+, full height -->
            <div class="md:col-span-2">
                <SkillsCarousel client:load />
            </div>
        </div>
    </div>
</Container>
